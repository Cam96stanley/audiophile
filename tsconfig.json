{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "scripts/seeds.js",
    "data/relatedProductImages.js",
    "data/relatedProducts.js",
    "lib/db.js",
    "data/products.js",
    "data/productImages.js",
    "data/includes.js",
    "data/gallaryImages.js",
    "data/categoryImages.js"
  ],
  "exclude": ["node_modules"]
}
